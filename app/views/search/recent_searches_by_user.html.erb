<% if current_user %>
  <div class="container mt-4">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title">Recent Searches by <%= current_user.user_ip %>:</h3>
        <ul class="list-group list-group-flush">
          <% current_user.searches.order(created_at: :desc).limit(5).each do |search| %>
            <li class="list-group-item recent-search-item"><%= search.query %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
