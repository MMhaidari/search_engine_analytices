<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <%= render @article %>

      <div class="mt-2">
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-outline-secondary rounded-lg" %>
        <%= button_to "Destroy this article", article_path(@article), method: :delete, class: "btn btn-outline-secondary ml-2" %>
        <%= link_to "Back to articles", articles_path, class: "btn btn-outline-secondary ml-2" %>
      </div>
    </div>
  </div>
</div>
