<div id="<%= dom_id article %>" class="card mt-3">
  <div class="card-body">
    <p class="my-4">
      <strong class="block font-weight-medium mb-1">Title:</strong>
      <%= article.title %>
    </p>

    <p class="my-4">
      <strong class="block font-weight-medium mb-1">Body:</strong>
      <%= article.body %>
    </p>

    <% if action_name != "show" %>
      <%= link_to "Show this article", article, class: "btn btn-outline-secondary btn-sm rounded-lg font-weight-medium" %>
      <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-outline-secondary btn-sm rounded-lg ml-2 font-weight-medium" %>
      <hr class="my-4">
    <% end %>
  </div>
</div>
