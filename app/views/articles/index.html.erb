<div class="container mt-5">
  <% if notice.present? %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <div>
    <%= render partial: "search/form", locals: { results: [] } %>
  </div>

  <div class="d-flex justify-content-between align-items-center mt-3">
    <h1 class="font-weight-bold fs-4">Articles</h1>
    <div>
    <%= link_to "Resent user searches", recent_searches_by_user_path,  class: "btn btn-secondary" %>
    <%= link_to "New article", new_article_path, class: "btn btn-primary" %>
    </div>
  </div>
  
  <div id="articles" class="min-w-full mt-3">
    <%= render 'articles/articles', articles: @articles %>
  </div>
</div>
